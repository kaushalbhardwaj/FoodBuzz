<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/llpresent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_present1"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        card_view:cardCornerRadius="9dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="70dp"
            android:background="#ffffff"
            android:id="@+id/head_layout">

            <ImageView

                android:id="@+id/icon_present"
                android:src="@drawable/breakfast"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="70dp"
            android:background="#ffffff"
            android:id="@+id/head">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#303F9F"
                android:text="Breakfast"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/label"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/label2"
                android:textColor="#303F9F"
                android:layout_marginLeft="15dp" />

        </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/body_layout"
            android:background="@drawable/aa10"
            android:layout_marginTop="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:id="@+id/title"
                android:textColor="#ffffff"
                android:layout_marginTop="50dp"
                android:textSize="30dp"
                android:layout_marginLeft="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu Details"
                android:paddingBottom="40dp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:id="@+id/menudetails"
                android:textSize="20dp"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ic_favorite_day"
                android:src="@drawable/ic_favorite_border_grey"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:background="@android:color/transparent"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ic_bookmark_day"
                android:src="@drawable/ic_bookmark_border_grey"
                android:visibility="invisible"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ic_thumb_down_day"
                android:src="@drawable/ic_thumb_down_border_grey"
                android:layout_marginTop="25dp"
                android:background="@android:color/transparent"
                android:layout_marginRight="8dp" />
        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_wb_sunny_white"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="false" />

    </android.support.v7.widget.CardView>

</LinearLayout>